{
    "name": "anibal/php-custom-framework",
    "description": "A custom PHP framework",
    "type": "project",
    "version": "0.1.0",
    "require-dev": {
        "pestphp/pest": "3.8",
        "friendsofphp/php-cs-fixer": "3.84",
        "phpstan/phpstan": "2.1",
        "php-mock/php-mock": "2.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Anibal Mendoza",
            "email": "anibalmd32@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
     "scripts": {
        "format": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "analyze": "phpstan analyze src --level=7",
        "test:init": "./vendor/bin/pest --init",
        "test:run": "./vendor/bin/pest"
    }
}
